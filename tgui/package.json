{
  "private": true,
  "name": "tgui-workspace",
  "version": "4.4.1",
  "packageManager": "yarn@3.3.1",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "tgui:analyze": "webpack --analyze",
    "tgui:bench": "webpack --env TGUI_BENCH=1 && node packages/tgui-bench/index.js",
    "tgui:build": "webpack",
    "tgui:dev": "node --experimental-modules packages/tgui-dev-server/index.js",
    "tgui:lint": "eslint packages --ext .js,.cjs,.ts,.tsx",
    "tgui:prettier": "prettier --check .",
    "tgui:sonar": "eslint packages --ext .js,.cjs,.ts,.tsx -c eslint-harder.config.mjs",
    "tgui:test": "jest --watch",
    "tgui:test-simple": "CI=true jest --color",
    "tgui:test-ci": "CI=true jest --color --collect-coverage",
    "tgui:tsc": "tsc"
  },
  "dependencies": {
    "@babel/core": "^7.28.6",
    "@babel/eslint-parser": "^7.28.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-transform-jscript": "^7.27.1",
    "@babel/preset-env": "^7.28.6",
    "@babel/preset-typescript": "^7.28.5",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^16.2.15",
    "@types/node": "^17.0.45",
    "@types/webpack": "^5.28.5",
    "@types/webpack-env": "^1.18.8",
    "@typescript-eslint/parser": "^8.53.1",
    "babel-jest": "^30.2.0",
    "babel-loader": "^10.0.0",
    "babel-plugin-inferno": "^6.8.5",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "common": "workspace:*",
    "css-loader": "^7.1.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "inferno": "^9.0.10",
    "jest": "^30.2.0",
    "jest-circus": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^19.0.0",
    "mini-css-extract-plugin": "^2.10.0",
    "prettier": "^3.8.1",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "style-loader": "^4.0.0",
    "terser-webpack-plugin": "^5.3.16",
    "typescript": "^5.9.3",
    "webpack": "^5.104.1",
    "webpack-bundle-analyzer": "^5.1.1",
    "webpack-cli": "^6.0.1"
  }
}
